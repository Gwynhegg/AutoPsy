<?xml version="1.0" encoding="utf-8" ?>
<ContentPage BackgroundColor="Gray" Background="Gray" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoPsy.Pages.TablePages.ValueSetterPage">
    <ContentPage.Content>
        <Grid Margin="50,80" BackgroundColor="AntiqueWhite"  x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Label Text="Укажите значение" Grid.Row="0"></Label>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="SaveValueButton" Text="+" Grid.Column="1" Clicked="SaveValueButton_Clicked"></Button>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>