<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoPsy.Pages.TablePages.AnalysisSelectionPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <DatePicker x:Name="DateNavigationStart" Grid.Column="0" DateSelected="DateNavigationStart_DateSelected"></DatePicker>
                <DatePicker x:Name="DateNavigationEnd" Grid.Column="2" DateSelected="DateNavigationEnd_DateSelected"></DatePicker>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label x:Name="ElementsFoundedLabel"></Label>
                <CheckBox x:Name="AllowNullCheckbox" Grid.Column="1"></CheckBox>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button x:Name="StatisticsButton" Grid.Column="0" Text="Статистический анализ" Clicked="StatisticsButton_Clicked"></Button>
                <Button x:Name="PoolAnalysis" Grid.Column="1" Text="Автозаполнение пустых значений" Clicked="PoolAnalysis_Clicked"></Button>
                <Button x:Name="HeatMap" Grid.Column="2" Text="Множественная регрессия" Clicked="FullRegression_Clicked"></Button>
            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button x:Name="DistributionAnalysis" Grid.Column="0" Text="Ряды распределения" Clicked="DistributionAnalysis_Clicked"></Button>
                <Button x:Name="SimplePrognosys" Grid.Column="1" Text="Прогнозирование параметра" Clicked="SimplePrognosys_Clicked"></Button>
                <Button x:Name="ClusterAnalysis" Grid.Column="2" Text="Кластерный анализ" Clicked="ClusterAnalysis_Clicked"></Button>
            </Grid>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>